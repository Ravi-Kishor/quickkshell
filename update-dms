#!/bin/bash
set -euo pipefail

# Correct repo (where your releases actually live)
REPO="Ravi-Kishor/quickkshell-git"
PKG_NAME="dms-shell-git"

require() {
  command -v "$1" >/dev/null 2>&1 || {
    echo "‚ùå Required command '$1' not found"
    exit 1
  }
}

require curl
require jq
require sudo
require pacman

get_installed_version() {
  pacman -Q "$PKG_NAME" 2>/dev/null | awk '{print $2}' || echo "Not Installed"
}

INSTALLED_VERSION=$(get_installed_version)

echo "Installed package version: $INSTALLED_VERSION"
echo "üì° Fetching latest release metadata‚Ä¶"

RELEASE_JSON=$(curl -fsSL "https://api.github.com/repos/$REPO/releases/latest")

TAG_NAME=$(echo "$RELEASE_JSON" | jq -r '.tag_name')

if [[ -z "$TAG_NAME" || "$TAG_NAME" == "null" ]]; then
  echo "‚ùå No releases found in $REPO"
  exit 1
fi

echo "Latest release tag: $TAG_NAME"

# Prefer x86_64_v3
ASSET_URL=$(echo "$RELEASE_JSON" | jq -r '
  .assets[]
  | select(.name | test("^dms-shell-git-.*-x86_64_v3\\.pkg\\.tar\\.zst$"))
  | .browser_download_url
' | head -n1)

# Fallback to generic
if [[ -z "$ASSET_URL" || "$ASSET_URL" == "null" ]]; then
  ASSET_URL=$(echo "$RELEASE_JSON" | jq -r '
    .assets[]
    | select(.name | test("^dms-shell-git-.*-x86_64\\.pkg\\.tar\\.zst$"))
    | .browser_download_url
  ' | head -n1)
fi

if [[ -z "$ASSET_URL" || "$ASSET_URL" == "null" ]]; then
  echo "‚ùå Could not find dms-shell-git package in release $TAG_NAME"
  exit 1
fi

PKG_FILE=$(basename "$ASSET_URL")

LATEST_VERSION=$(echo "$PKG_FILE" | sed -E \
  's/^dms-shell-git-(.*)-x86_64(_v3)?\.pkg\.tar\.zst/\1/')

echo "Latest package version: $LATEST_VERSION"
echo

if [[ "$INSTALLED_VERSION" == "$LATEST_VERSION" ]]; then
  echo "‚úÖ dms-shell-git is already up to date"
  exit 0
fi

echo "‚¨ÜÔ∏è Updating dms-shell-git $INSTALLED_VERSION ‚Üí $LATEST_VERSION"

TMP_DIR=$(mktemp -d)
cd "$TMP_DIR"

echo "üì• Downloading:"
echo "   $PKG_FILE"

curl -L --fail -o "$PKG_FILE" "$ASSET_URL"

echo "üì¶ Installing package..."
sudo pacman -U --noconfirm "$PKG_FILE"

cd /
rm -rf "$TMP_DIR"

echo
echo "‚úÖ dms-shell-git $LATEST_VERSION installed successfully!"
